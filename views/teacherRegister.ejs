<%- include('header'); -%>

<div class="container">
    <div class="row">
    <h1 style="text-align:center;">Sign Up</h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/teacher/register" method ="POST">
                <div class="form-group">
                    UserName:   <input type="text" name="username" placeholder="User Name">
                </div>
                <div class="form-group">
                    Password:   <input type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    Name :  <input type="text" name="name" placeholder="Full Name">
                </div>
                <div class="form-group">
                    Staff-Number:    <input type="number" name="staffNumber" placeholder="Roll Number">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
           </form>
           <a href="/">Go Back</a>
        </div>
    </div>
</div>
<%- include('footer'); -%>